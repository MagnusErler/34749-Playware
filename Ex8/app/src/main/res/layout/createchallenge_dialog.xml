<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/createChallenge_NormalMode_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Normal mode"/>

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/createChallenge_HardMode_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Hard mode"/>

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/createChallenge_NormalTimeMode_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Normal Time mode"/>

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/createChallenge_HardTimeMode_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Hard Time mode"/>
</LinearLayout>